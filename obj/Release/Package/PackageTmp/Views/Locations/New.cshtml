@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Modal.cshtml";
    Layout = null;
}
@using (Html.BeginForm("Save", "Locations", FormMethod.Post))
{
    <input type="hidden" name="account" value="@ViewData["Account"]" />
    <p>
        <label for="name">Name:</label>
        <input type="text" name="name" value="" />
        <br />
        <label for="address">Address:</label>
        <input type="text" name="address" value="" /><br />
        <input type="text" name="address_line2" value="" /><br />
        <label for="city">City:</label>
        <input type="text" name="city" value="" />
        <label for="state">State:</label>
        @Html.DropDownList("state_dropdown", (List<SelectListItem>)ViewData["States"])
        <br />
        <label for="zip">Postal Code:</label>
        <input type="text" name="zip_code" value="" />
        <br />
        <label for="country">Country:</label>
        <input type="text" name="country" value="" />
    </p>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <input class="btn btn-large btn-primary" type="submit" name="buttonSubmit" value="Save" />
    </div>

}
<script type="text/javascript">
    $(function () {
        LoadModal('New Location');
    });
</script>
