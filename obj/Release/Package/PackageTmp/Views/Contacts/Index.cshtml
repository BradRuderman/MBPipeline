@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Modal.cshtml";
    Layout = null;
}
@using (Html.BeginForm("Update", "Contacts", FormMethod.Post))
{
    <input type="hidden" name="id" value="@Model.id" />
    <input type="hidden" name="account" value="@ViewData["Account"]" />
    <p>
        <label for="title">Title:</label>
        <input type="text" name="title" value="@Model.title" />
        <br />

        <label for="name">Name:</label>
        <input type="text" name="name" value="@Model.name" />
        <br />
        <label for="address">Address:</label>
        <input type="text" name="address" value="@Model.address" /><br />
        <input type="text" name="address_line2" value="@Model.address_line2" /><br />
        <label for="city">City:</label>
        <input type="text" name="city" value="@Model.city" />
        <label for="state">State:</label>
        @Html.DropDownList("state_dropdown", (List<SelectListItem>)ViewData["States"])
        <br />
        <label for="zip">Postal Code:</label>
        <input type="text" name="zip_code" value="@Model.zip_code" />
        <br />
        <label for="country">Country:</label>
        <input type="text" name="country" value="@Model.country" />
    </p>
    <p>
        <label for="email">Email:</label>
        <input type="text" name="email" value="@Model.email" />
        <br />
        <label for="phone_number">Phone:</label>
        <input type="text" name="phone_number" value="@Model.phone_number" />
        <br />
        <label for="secondary_number">Secondary Phone:</label>
        <input type="text" name="secondary_number" value="@Model.secondary_number" />
    </p>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <input class="btn btn-large btn-primary" type="submit" name="buttonSubmit" value="Save" />
    </div>

}
<script type="text/javascript">
    $(function () {
        LoadModal('Update Contact');
    });
</script>
